<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorldMap"
             x:Class="WorldMap.App">
    <Application.Resources>

        <!-- Colors -->
        <Color x:Key="black" >#1A1A1D</Color>
        <Color x:Key="maroon">#3B1C32</Color>
        <Color x:Key="Gray">#F1F6F9</Color>
        
        <!--Image-->
        <x:String x:Key="lightImage">light.png</x:String>
        <x:String x:Key="darkImage">night.png</x:String>
        
        
        <!--Styles-->

        <Style TargetType="Label"
               x:Key="LargeLabelStyle">
            <Setter Property="FontFamily" Value="PoppinsRegular"/>
            <Setter Property="FontSize"  Value="20"/>
            <Setter Property="TextColor" Value="{StaticResource Gray}"/>
        </Style>
               
        
    </Application.Resources>
</Application>
